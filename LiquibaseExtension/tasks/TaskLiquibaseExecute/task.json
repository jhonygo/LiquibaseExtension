{
  "id": "b97ccb20-29bd-11e6-8829-d59d39f3c3c4",
  "name": "TaskLiquibaseExecute",
  "friendlyName": "Liquibase command execution",
  "description": "Run Liquibase executable with given options",
  "author": "sedatifpcdeboiron",
  "helpMarkDown": "See [liquibase homepage](http://www.liquibase.org) for details",
  "category": "Utility",
  "visibility": [
    "Build",
    "Release"
  ],
  "demands": [],
  "version": {
    "Major": "0",
    "Minor": "1",
    "Patch": "2"
  },
  "minimumAgentVersion": "1.95.0",
  "instanceNameFormat": "Run liquibase command $(message)",
  "groups": [
    {
      "name": "common",
      "displayName": "Common options",
      "isExpanded": true
    },
    {
      "name" : "commands",
      "displayName": "Commands options",
      "isExpanded" :  true
    }
  ],
  "inputs": [
    {
      "name": "changeLogFile",
      "type": "filePath",
      "label": "Path to the changelog file to execute",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Path to the liquibase changelog to perform commands against.",
      "groupName" :  "common"
    },
    {
      "name": "username",
      "type": "string",
      "label": "Database username (must have sufficient privileges!)",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Database username (must have sufficient privileges!).",
      "groupName" :  "common"    
    },
    {
      "name": "password",
      "type": "string",
      "label": "Database password",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Database password.",
      "groupName" :  "common"
    },
    {
      "name": "url",
      "type": "string",
      "label": "Database URL",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Database URL (must match the JDBC format).",
      "groupName" :  "common"
    },
    {
      "name": "command",
      "type": "pickList",
      "label": "Liquibase command to run",
      "defaultValue": "status",
      "required": true,
      "options": {
        "rollbackTestingUpdate": "Performs update->rollback->update sequence",
        "update": "Performs simple update",
        "status": "Outputs count (list if --verbose) of unrun change sets."
      },
      "helpMarkDown": "The liquibase command to run. See [documentation](http://www.liquibase.org/documentation/command_line.html) for details",
      "groupName" :  "commands"
    },
        {
      "name": "arguments",
      "type": "string",
      "label": "Arguments to pass to liquibase command",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Arguments to pass to liquibase command.",
      "groupName" :  "commands"
    }
  ],
  "execution": {
    "PowerShell": {
      "target": "$(currentDirectory)\liquibaseWrapper.ps1"
    }
  }
}
