{
  "id": "b97ccb20-29bd-11e6-8829-d59d39f3c3c4",
  "name": "Liquibase command",
  "friendlyName": "Liquibase command",
  "description": "Run Liquibase executable with given options",
  "author": "sedatifpcdeboiron",
  "helpMarkDown": "See [liquibase homepage](http://www.liquibase.org) for details",
  "category": "Utility",
  "visibility": [
    "Build",
    "Release"
  ],
  "demands": [],
  "version": {
    "Major": "0",
    "Minor": "1",
    "Patch": "2"
  },
  "minimumAgentVersion": "1.95.0",
  "instanceNameFormat": "Liquibase command",
  "groups": [
    {
      "name": "common",
      "displayName": "Common options",
      "isExpanded": true
    },
    {
      "name" : "commands",
      "displayName": "Commands options",
      "isExpanded" :  true
    }
  ],
  "inputs": [
    {
      "name": "changeLogFile",
      "type": "filePath",
      "label": "Path to the changelog file to execute",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Path to the liquibase changelog to perform commands against.",
      "groupName" :  "common"
    },
    {
      "name": "driver",
      "type": "pickList",
      "label": "Database driver to use",
      "defaultValue": "status",
      "required": true,
      "options": {
        "lib/jtds-1.3.1.jar": "Sybase"
      },
      "helpMarkDown": "The JDBC database driver to use.",
      "groupName" :  "common"
    },
    {
      "name": "username",
      "type": "string",
      "label": "Database username (must have sufficient privileges!)",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Database username (must have sufficient privileges!).",
      "groupName" :  "common"    
    },
    {
      "name": "password",
      "type": "string",
      "label": "Database password",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Database password.",
      "groupName" :  "common"
    },
    {
      "name": "url",
      "type": "string",
      "label": "Database URL",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Database URL (must match the JDBC format).",
      "groupName" :  "common"
    },
    {
      "name": "command",
      "type": "string",
      "label": "Liquibase command to run",
      "defaultValue": "status",
      "required": true,
      "helpMarkDown": "The liquibase command to run. See [documentation](http://www.liquibase.org/documentation/command_line.html) for details",
      "groupName" :  "commands"
    },
        {
      "name": "parameters",
      "type": "string",
      "label": "Arguments to pass to the liquibase command",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Arguments to pass to liquibase command.",
      "groupName" :  "commands"
    }
  ],
  "execution": {
    "PowerShell": {
      "target": "$(currentDirectory)\\liquibaseWrapper.ps1",
        "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)",
            "platforms": [
                "windows"
            ]
    }
  }
}
